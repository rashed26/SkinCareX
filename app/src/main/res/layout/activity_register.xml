<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Crystal_green"
    tools:context=".Register">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:text="Register"
        android:id="@+id/signIn"/>

    <EditText
        android:background="#aaa9ad"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:id="@+id/userName"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black"
        android:hint="Username"
        android:layout_below="@+id/signIn"/>

    <EditText
        android:background="#aaa9ad"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:id="@+id/email"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:hint="Email"
        android:layout_below="@+id/userName"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:background="#aaa9ad"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:id="@+id/password"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:inputType="textPassword"/>

    <EditText
        android:background="#aaa9ad"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:id="@+id/confirmPassword"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:hint="Confirm Password"
        android:layout_below="@+id/password"
        android:inputType="textPassword"/>

    <EditText
        android:background="#aaa9ad"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:id="@+id/et_date"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:hint="Select date of birth"
        android:layout_below="@+id/confirmPassword"
        />



    <EditText
        android:id="@+id/mobileId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#aaa9ad"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:hint="Mobile Number"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />
     


    <com.google.android.material.button.MaterialButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Register"
        android:id="@+id/logInButton"
        android:layout_below="@+id/mobileId"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/yello_green"
        android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/alreadyMessage"
            android:layout_below="@+id/logInButton"
            android:orientation="horizontal">

             <TextView android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textStyle="normal"
                 android:textColor="@color/black"
                 android:textSize="17sp"
                 android:text="Already have an account? "
                 android:id="@+id/forgotPassword"
                 android:textAlignment="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/purple_700"
                android:textSize="17sp"
                android:text="Log In"
                android:id="@+id/referLogIn"
                android:textAlignment="center"/>

        </LinearLayout>


</RelativeLayout>