<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_home"
    android:layout_gravity="center"
    tools:context=".Information_details">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:background="@color/teal_200"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textColor="@color/teal_200"
            android:text="First"
            android:id="@+id/navigation"/>


        <RelativeLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/navigation">


            <GridLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/grid1"
                android:columnCount="1"
                android:rowCount="5">


                <androidx.cardview.widget.CardView
                    android:layout_gravity="fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_row="0">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/linerLayout1">

                        <TextView
                            android:background="@color/teal_700"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:text="Actinic Keratosis"
                            android:id="@+id/title1"
                            android:paddingLeft="5dp"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:textSize="30sp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:text="What is Actinic Keratosis?"
                            android:id="@+id/semiTitle1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="5dp"
                            android:textSize="18dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/actinitc_keratosis_definition"
                            android:id="@+id/description1"
                            android:layout_marginBottom="20dp"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_gravity="fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_row="1">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/linerLayout2">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_height="180dp"
                            android:layout_width="match_parent"
                            android:id="@+id/imageView1"
                            android:src="@drawable/actinic_cheilitis_sq_cell_lip_6"
                            android:scaleType="fitXY"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_gravity="fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_row="2">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/linerLayout3">

                        <TextView
                            android:background="@color/teal_700"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:text="Signs and Symptoms"
                            android:id="@+id/title2"
                            android:paddingLeft="5dp"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:textSize="27sp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description2"
                            android:id="@+id/description2"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description2_list"
                            android:id="@+id/description2_list"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description2_last"
                            android:id="@+id/description2_last"
                            android:layout_marginBottom="20dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_gravity="fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_row="3">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/linerLayout4">

                         <TextView
                             android:background="@color/teal_700"
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:textColor="@color/white"
                             android:text="Causes of actinic keratosis"
                             android:id="@+id/title3"
                             android:paddingLeft="5dp"
                             android:paddingBottom="20dp"
                             android:paddingTop="20dp"
                             android:textSize="27sp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description3"
                            android:id="@+id/description3"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/descrption3_type1"
                            android:id="@+id/descrption3_type1"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="7dp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description3_type1_descrption"
                            android:id="@+id/description3_type1_descrption"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description3_list1"
                            android:id="@+id/description3_list1"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"

                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description3_type2"
                            android:id="@+id/description3_type2"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="7dp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"

                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description3_type2_description"
                            android:id="@+id/description3_type2_description"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"
                           />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description3_list2"
                            android:id="@+id/description3_list2"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"
                            android:layout_marginBottom="20dp"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_gravity="fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_row="4">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/linerLayout5"
                       >
                        <TextView
                            android:background="@color/teal_700"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/white"
                            android:text="Who's at risk?"
                            android:id="@+id/title4"
                            android:paddingLeft="5dp"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:textSize="27sp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description4"
                            android:id="@+id/description4"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="#8C7D66"
                            android:text="@string/description4_list1"
                            android:id="@+id/description4_list1"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"
                            android:layout_marginBottom="20dp"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>