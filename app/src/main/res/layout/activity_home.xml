<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1DB7AE"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Home">


     <LinearLayout
         android:background="@color/white"
         android:gravity="center"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="200dp"

         android:id="@+id/animation">

         <com.airbnb.lottie.LottieAnimationView
             android:layout_width="match_parent"
             android:layout_height="220dp"
             app:lottie_rawRes="@raw/testing"
             app:lottie_autoPlay="true"
             app:lottie_loop="true"
         />

     </LinearLayout>

     <GridLayout
         android:background="@color/white"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:id="@+id/grid1"
         android:layout_below="@+id/animation"
         android:columnCount="2"
         android:rowCount="4">


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="0">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/linerLayout1"
                    android:gravity="center">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/imageView1"
                            android:src="@drawable/ic_baseline_fit_screen_24"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="New Scan"
                            android:id="@+id/textView2"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                         <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textColor="@color/teal_200"
                             android:text="Identify your rash"
                             android:id="@+id/textView10"
                             android:textSize="15sp"
                             android:textStyle="bold"
                             android:textAlignment="center"/>

                    </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/linerLayout2"
                    android:gravity="center">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/imageView2"
                            android:src="@drawable/ic_baseline_personal_injury_24"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Your Scans"
                            android:id="@+id/textView3"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/teal_200"
                            android:text="View past scans"
                            android:id="@+id/textView11"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="1">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/linerLayout3"
                    android:gravity="center">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/imageView3"
                        android:src="@drawable/ic_baseline_medical_information_24"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Rashes"
                        android:id="@+id/textView4"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/teal_200"
                        android:text="Learn about rashes"
                        android:id="@+id/textView12"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_gravity="fill"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/cardView2"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/linerLayout4"
                android:gravity="center">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ic_baseline_medication_24"/>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Treatment"
                     android:id="@+id/textView5"
                     android:textSize="25sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/teal_200"
                    android:text="Common treatments"
                    android:id="@+id/textView13"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_gravity="fill"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:cardElevation="8dp"
             app:cardCornerRadius="8dp"
             android:layout_margin="8dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_column="0"
             android:layout_row="2">


             <LinearLayout
                 android:orientation="vertical"
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:id="@+id/linerLayout5"
                 android:gravity="center">

                 <ImageView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/imageView5"
                     android:src="@drawable/ic_baseline_fmd_good_24"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Map"
                     android:id="@+id/textView6"
                     android:textSize="25sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textColor="@color/teal_200"
                     android:text="Find your location"
                     android:id="@+id/textView14"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:layout_gravity="fill"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/cardView3"
             app:cardElevation="8dp"
             app:cardCornerRadius="8dp"
             android:layout_margin="8dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_column="1"
             android:layout_row="2">


             <LinearLayout
                 android:orientation="vertical"
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:id="@+id/linerLayout6"
                 android:gravity="center">

                 <ImageView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/imageView6"
                     android:src="@drawable/ic_baseline_assignment_ind_24"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Social"
                     android:id="@+id/textView7"
                     android:textSize="25sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textColor="@color/teal_200"
                     android:text="Share your experience"
                     android:id="@+id/textView15"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_gravity="fill"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:cardElevation="8dp"
             app:cardCornerRadius="8dp"
             android:layout_margin="8dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_column="0"
             android:layout_row="3">


             <LinearLayout
                 android:orientation="vertical"
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:id="@+id/linerLayout7"
                 android:gravity="center">

                 <ImageView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/imageView7"
                     android:src="@drawable/ic_baseline_animation_24"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Gsapp"
                     android:id="@+id/textView8"
                     android:textSize="25sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textColor="@color/teal_200"
                     android:text="Explore your idea"
                     android:id="@+id/textView16"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:layout_gravity="fill"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/cardView4"
             app:cardElevation="8dp"
             app:cardCornerRadius="8dp"
             android:layout_margin="8dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_column="1"
             android:layout_row="3">


             <LinearLayout
                 android:orientation="vertical"
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:id="@+id/linerLayout8"
                 android:gravity="center">

                 <ImageView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/imageView8"
                     android:src="@drawable/ic_baseline_local_phone_24"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Doctor's Info"
                     android:id="@+id/sass"
                     android:textSize="25sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textColor="@color/teal_200"
                     android:text="Find advice from doctors"
                     android:id="@+id/textView17"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:textAlignment="center"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>

     </GridLayout>




</RelativeLayout>